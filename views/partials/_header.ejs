<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username === undefined) { %>
      <form method="POST" action="/login">
        <div class="d-flex justifty-content-end">

          <div class="mx-1">
            <input class="form-control" type="text" name="username" placeholder="Username">
          </div>

          <div class="mx-1">
           <input class="btn btn-outline-dark" type="submit" value="Login">
          </div>

      </div>
    </form>
    <% } else { %>
    <form method="POST" action="/logout">
      <div class="d-flex justifty-content-end">

        <div>
          <p class="my-2">Logged in As: <%= username %>!</p>
        </div>

        <div class="mx-3">
          <input class="btn btn-outline-dark" type="submit" value="Logout">
        </div>

      </div>
    </form>
    <% } %>
  </nav>
</header>